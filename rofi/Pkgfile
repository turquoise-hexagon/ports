# Description : A window switcher, application launcher and dmenu replacement
# URL         : https://github.com/davedavenport/rofi
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : startup-notification xorg-xcb-util-wm xorg-xcb-util-xrm libxkbcommon librsvg

name=rofi
version=1.5.2
release=1
source=("https://github.com/davedavenport/$name/releases/download/$version/$name-$version.tar.gz")

build() {
    cd "$name-$version"

    ./configure --prefix=/usr --disable-check

    make
    make DESTDIR="$PKG" install
}

# vim: ft=sh

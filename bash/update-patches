#!/usr/bin/env bash
#
# update bash patches

set -xe

dir=patches

# prepare
! test -d "$dir"

. Pkgfile

ver=${version%.*}
max=${version##*.}
lvl=${ver/.}

# download
for ((; i++ < max;)) {
    cur=$(printf '%03d' "$i")

    wget "https://ftp.gnu.org/gnu/$name/$name-$ver-patches/$name$lvl-$cur" -P "$dir"
}

# archive & cleanup
tar czvf "$dir.tar.gz" "$dir"; rm -rf "$dir"

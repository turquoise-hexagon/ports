#
# /etc/profile: system-wide defaults for bash(1) login shells
#

if [ "$UID" -eq 0 ]; then
    PATH="/sbin:/usr/sbin:/opt/sbin:/bin:/usr/bin:/opt/bin"
else
    PATH="/bin:/usr/bin:/opt/bin"
fi

if [ ! -f ~/.inputrc ]; then
    INPUTRC="/etc/inputrc"
fi

LESS="-R"
PS1="\[\033[1m\]\\$ \[\033[0m\]"
PS2="\[\033[1m\]> \[\033[0m\]"

export PATH INPUTRC LESS PS1 PS2

umask 022

# End of file

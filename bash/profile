# /etc/profile : system-wide defaults for bash login shells

[ "$UID" -ne 0 ] && PATH="/bin:/usr/bin:/opt/bin" ||
    PATH="/sbin:/usr/sbin:/opt/sbin:/bin:/usr/bin:/opt/bin"

[ ! -f ~/.inputrc ] && INPUTRC="/etc/inputrc"

LESS="-R"
PS1="\[\e[1m\]\\$ \[\e[0m\]"
PS2="\[\e[1m\]> \[\e[0m\]"

export PATH INPUTRC LESS PS1 PS2

umask 022

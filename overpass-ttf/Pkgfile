# Description : An open source font family
# URL         : http://overpassfont.org
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : xorg-mkfontdir xorg-mkfontscale fontconfig

name=overpass-ttf
version=3.0.3
release=1
source=("https://github.com/redhatbrand/${name//-*}/archive/$version.tar.gz")

build()
{
    cd "Overpass-$version"

    install -Dm644 -t "$PKG/usr/share/fonts/X11/TTF/" \
        webfonts/"${name//-*}"{-,-mono-}webfont/*.ttf
}

# vim: ft=sh

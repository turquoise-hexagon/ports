name=android-platform-tools
version=29.0.2
release=1
source=("https://dl.google.com/android/repository/${name#*-}_r$version-linux.zip")

build() {
    cd "${name#*-}"

    install -Dm755 {adb,fastboot} -t "$PKG/usr/bin"
}

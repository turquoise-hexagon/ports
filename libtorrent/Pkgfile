# Description : torrent library
# URL         : https://rakshasa.github.io/rtorrent
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : libsigc++ curl

name=libtorrent
version=0.13.7
release=1
source=(
"https://github.com/rakshasa/$name/archive/v$version.tar.gz"
openssl.patch
)

build() {
    cd "$name-$version"

    patch -p1 -i "$SRC/openssl.patch"

    sed -i '/AM_PATH_CPPUNIT(.*)/d' configure.ac

    ./autogen.sh
    ./configure       \
        --prefix=/usr \
        --enable-debug=no

    make
    make DESTDIR="$PKG" install
}

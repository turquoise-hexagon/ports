# Description : pixel-perfect upscale bdf bitmap fonts
# URL         : https://github.com/francesco149/bdf2x
# Maintainer  : camille, camille at laserbat dot pw

name=bdf2x
commit=68055df8fba05333386f9f74929fa36cda23bf55
version=20180128
release=1
source=("https://github.com/francesco149/$name/archive/$commit.tar.gz")

build() {
    cd "$name-$commit"

    make "$name"

    install -Dm755 "$name" -t "$PKG/usr/bin"
}


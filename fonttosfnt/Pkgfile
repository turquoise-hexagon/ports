# Description : Wraps a set of bdf or pcf bitmap fonts in a sfnt wrappe
# URL         : https://gitlab.freedesktop.org/xorg/app/fonttosfnt
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : freetype xorg-xorgproto

name=fonttosfnt
version=1.1.0
release=2
source=("https://gitlab.freedesktop.org/xorg/app/$name/-/archive/$name-$version/$name-$name-$version.tar.gz")

build() {
    cd "$name-$name-$version"

    ./autogen.sh
    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}

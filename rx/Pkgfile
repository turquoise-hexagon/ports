# Description : An extensible, modern and minimalist pixel editor
# URL         : https://rx.cloudhead.io
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : rust

name=rx
version=0.3.2
release=1
source=("https://github.com/cloudhead/$name/archive/v$version.tar.gz")

build() {
    cd "$name-$version"

    cargo build --release --locked

    install -Dm755 "target/release/$name" -t "$PKG/usr/bin"
}

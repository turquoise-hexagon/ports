# Description : A cross-platform C++ GUI toolkit
# URL         : https://www.fltk.org
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : cmake xorg-libxcursor xorg-libxinerama libjpeg-turbo xorg-libxft

name=fltk
version=1.3.5
release=2
source=("https://www.$name.org/pub/$name/$version/$name-$version-source.tar.gz")

build() {
    cd "$name-$version"

    mkdir build
    cd    build

    cmake ..                        \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DFLTK_LIBDIR=/usr/lib

    make DESTDIR="$PKG" install
}

# Description : Stalonetray is a stand-alone system tray for X11
# URL         : http://stalonetray.sourceforge.net
# Maintainer  : camille, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=stalonetray
version=0.8.3
release=1
source=("https://sourceforge.net/projects/$name/files/$name/$name-$version/$name-$version.tar.gz")

build() {
    cd "$name-$version"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}

# Description : maim (make image) takes screenshots of your desktop
# URL         : https://github.com/naelstrof/maim
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : freetype slop xorg-libxcomposite xorg-libxrandr

name=maim
version=5.5.2
release=1
source=("https://github.com/naelstrof/$name/archive/v$version.tar.gz")

build() {
    cd "$name-$version"

    cmake . \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr

    make
    make DESTDIR="$PKG" install
}

# vim: ft=sh

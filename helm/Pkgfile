# Description : A free polyphonic synth with lots of modulation
# URL         : http://tytel.org/helm
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : jack2

name=helm
commit=abdedd527e6e1cf86636f0f1e8a3e75b06ed166a
version=20180708
release=1
source=("https://github.com/mtytel/$name/archive/$commit.tar.gz")

build() {
    cd "$name-$commit"

    make standalone
    make DESTDIR="$PKG" install_standalone
}

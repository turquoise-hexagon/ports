# Description : Control backlight brightness - udev rule
# URL         : https://github.com/hummer12007/brightnessctl
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : udev

name=brightness-udev
version=0.4
release=3
source=("https://github.com/hummer12007/brightnessctl/archive/$version.tar.gz")

build() {
    cd "brightnessctl-$version"

    install -Dm644 90-brightnessctl.rules -t "$PKG/etc/udev/rules.d"
}

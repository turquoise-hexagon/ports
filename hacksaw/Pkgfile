name=hacksaw
commit=ffd6ea3801ea7bb08c3504ce982e113ce9e0a585
version=30062019
release=1
source=("https://github.com/nexromancers/$name/archive/$commit.tar.gz")

build() {
    cd "$name-$commit"

    cargo build --release --locked

    install -Dm755 "target/release/$name" -t "$PKG/usr/bin"
}

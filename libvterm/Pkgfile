# Description : An abstract C99 library which implements a VT220 or xterm-like terminal emulator
# URL         : http://www.leonerd.org.uk/code/libvterm
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=libvterm
commit=7a3913a4f465fbf4f59a049f43da8d97fc573a97
version=26112018
release=1
source=("https://github.com/neovim/$name/archive/$commit.tar.gz")

build()
{
    cd "$name-$commit"

    make
    make PREFIX=/usr DESTDIR="$PKG" install
}


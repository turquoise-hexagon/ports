# Description : cloc counts blank / comment / physical lines of source code
# URL         : https://github.com/AlDanial/cloc
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : perl

name=cloc
version=1.82
release=1
source=("https://github.com/aldanial/$name/archive/$version.tar.gz")

build() {
    cd "$name-$version"

    install -Dm755 "$name" -t "$PKG/usr/bin"
}

# Description : A tiny XML library
# URL         : https://www.msweet.org/mxml
# Maintainer  : camille, camille at laserbat dot pw

name=mxml
version=3.1
release=1
source=("https://github.com/michaelrsweet/$name/archive/v$version.tar.gz")

build() {
    cd "$name-$version"

    ./configure --prefix=/usr

    make
    make DSTROOT="$PKG" install

    rm -rf "$PKG/usr/share/doc"
}

# Description :
# URL         :
# Maintainer  :
# Depends on  :

name=bspwm-git
version=git
release=1
source=()

build()
{
    cd "$PKGMK_SOURCE_DIR"

    cd "${name%-*}" &> /dev/null && git pull ||
    {
        git clone "https://github.com/baskerville/${name%-*}"

        cd "${name%-*}"
    }

    make
    make DESTDIR="$PKG" DOCPREFIX="/usr/share/${name%-*}" PREFIX=/usr install

    find "$PKG/usr/share/${name%-*}" -name "*.md" -delete
}

# vim: ft=sh

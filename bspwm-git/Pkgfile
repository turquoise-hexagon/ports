# Description : A tiling window manager based on binary space partitioning
# URL         : https://github.com/baskerville/bspwm
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : xorg-xcb-util xorg-xcb-util-keysyms xorg-xcb-util-wm

name=bspwm-git
version=git
release=3
source=()

build() {
    cd "$PKGMK_SOURCE_DIR"

    if [[ -d $name ]]; then
        cd "$name"
        git pull
    else
        git clone "https://github.com/baskerville/${name%-*}" "$name"
        cd "$name"
    fi

    make
    make DESTDIR="$PKG" DOCPREFIX="/usr/share/${name%-*}" PREFIX=/usr install

    find "$PKG/usr/share/${name%-*}" -name "*.md" -delete
}

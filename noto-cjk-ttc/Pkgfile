# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : xorg-mkfontdir xorg-mkfontscale fontconfig

name=noto-cjk-ttc
commit=28bd7c47c25f675d9aad3f73327d031fd6869634
version=30112018
release=5
source=("https://github.com/googlei18n/${name%-*}/archive/$commit.tar.gz")

build() {
    cd "${name%-*}-$commit"

    install -Dm644 *.ttc -t "$PKG/usr/share/fonts/X11/TTC"
}

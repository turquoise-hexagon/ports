# Depends on  : xorg-mkfontdir xorg-mkfontscale fontconfig

name=noto-cjk-ttc
commit=cf29231ab8029678af4bbc1a9480e2b296a5b2d3
version=09042019
release=1
source=("https://github.com/googlei18n/${name%-*}/archive/$commit.tar.gz")

build() {
    cd "${name%-*}-$commit"

    install -Dm644 *.ttc -t "$PKG/usr/share/fonts/X11/TTC"
}

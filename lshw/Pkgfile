# Description : Small tool to provide detailed information on the hardware configuration of the machine
# URL         : https://ezix.org/project/wiki/HardwareLiSter
# Maintainer  : camille, camille at lzr dot pw

name=lshw
version=02.19.2
release=1
source=(""https://www.ezix.org/software/files/$name-B.$version.tar.gz)

build() {
    cd "$name-B.$version"

    make
    make DESTDIR="$PKG" install

    rm -rf "$PKG/usr/share/locale"
}

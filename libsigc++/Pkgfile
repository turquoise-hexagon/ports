# Description : A typesafe callback system for standard C++
# URL         : https://github.com/libsigcplusplus/libsigcplusplus
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : mm-common

name=libsigc++
version=3.0.0
release=1
source=("https://github.com/${name//+/plus}/${name//+/plus}/releases/download/$version/$name-$version.tar.xz")

build() {
    cd "$name-$version"

    ./autogen.sh
    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install

    rm -rf "$PKG/usr/share/"{doc,devhelp}
}

# vim: ft=sh

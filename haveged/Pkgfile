# Description : Entropy daemon
# URL         : https://github.com/jirka-h/haveged
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=haveged
version=1.9.4
release=1
source=(
"https://github.com/jirka-h/$name/archive/$version.tar.gz"
"$name"
)

build() {
    cd "$name-$version"

    ./configure           \
        --prefix=/usr     \
        --bindir=/usr/bin \
        --sbindir=/usr/sbin

    make
    make DESTDIR="$PKG" install

    install -Dm755 "$SRC/$name" -t "$PKG/etc/rc.d"
}

# Description : Entropy daemon
# URL         : https://github.com/jirka-h/haveged
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  :

name=haveged
version=1.9.8
release=1
source=(
"https://github.com/jirka-h/$name/archive/v$version.tar.gz"
"$name"
)

build() {
    cd "$name-$version"

    ./configure           \
        --prefix=/usr     \
        --bindir=/usr/bin \
        --sbindir=/usr/sbin

    make DESTDIR="$PKG" install

    install -Dm755 "$SRC/$name" -t "$PKG/etc/rc.d"
}

# vim: ft=sh

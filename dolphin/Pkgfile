# Description : An emulator for the GameCube and the Wii
# URL         : https://dolphin-emu.org
# Maintainer  : camille, camille at lzr dot pw
# Depends on  : cmake

name=dolphin
commit=1b97f081b8eff9012132a4124537968bdb0e03e0
version=20200329
release=1
source=("https://github.com/$name-emu/$name/archive/$commit.tar.gz")

build() {
    cd "$name-$commit"

    mkdir build
    cd    build

    cmake .. -DCMAKE_INSTALL_PREFIX=/usr

    make
    make DESTDIR="$PKG" install

    rm -rf "$PKG/usr/share/locale"
}

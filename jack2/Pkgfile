# Description : JACK Audio Connection Kit
# URL         : https://jackaudio.org
# Maintainer  : camille, camille at laserbat dot pw

name=jack2
version=1.9.14
release=1
source=("https://github.com/jackaudio/$name/archive/v$version.tar.gz")

build() {
    cd "$name-$version"

    ./waf configure   \
        --prefix=/usr \
        -j "${JOBS:-1}"

    ./waf build
    ./waf install --destdir="$PKG"
}

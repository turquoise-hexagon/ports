# Depends on  : xorg-libxcb xorg-xcb-util

name=wmutils-opt
commit=6cd94f43bc53fbe27eee45b2e4cbb40a143a7620
version=06112019
release=1
source=("https://github.com/${name%-*}/${name#*-}/archive/$commit.tar.gz")

build() {
    cd "${name#*-}-$commit"

    make DESTDIR="$PKG" PREFIX=/usr MANPREFIX=/usr/share/man install
}


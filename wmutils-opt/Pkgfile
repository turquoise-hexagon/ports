version=20200701
release=1
source=("https://github.com/${name%-*}/${name#*-}/archive/$commit.tar.gz")

build() {
    cd "${name#*-}-$commit"

    make DESTDIR="$PKG" PREFIX=/usr MANPREFIX=/usr/share/man install
}

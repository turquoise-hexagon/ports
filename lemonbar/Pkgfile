# Description : A featherweight, lemon-scented bar based on xcb
# URL         : https://github.com/lemonboy/lemonbar
# Maintainer  : camille, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : xorg-libxcb

name=lemonbar
version=1.3
release=1
source=("https://github.com/lemonboy/${name#lemon}/archive/v$version.tar.gz")

build() {
    cd "${name#lemon}-$version"

    make
    make DESTDIR="$PKG" install
}

# vim: ft=sh

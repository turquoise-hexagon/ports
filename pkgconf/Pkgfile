# Description : Package compiler and linker metadata toolkit
# URL         : https://git.dereferenced.org/pkgconf/pkgconf
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=pkgconf
version=1.6.3
release=1
source=("https://distfiles.dereferenced.org/$name/$name-$version.tar.gz")

build() {
    cd "$name-$version"

    ./configure       \
        --prefix=/usr \
        --with-system-libdir=/lib:/usr/lib

    make
    make DESTDIR="$PKG" install

    ln -sf /usr/bin/pkgconf "$PKG/usr/bin/pkg-config"

    rm -rf "$PKG/usr/share/doc"
}

# Description : XCB utility functions for the X resource manager
# URL         : https://github.com/Airblader/xcb-util-xrm
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : xorg-xcb-util

name=xorg-xcb-util-xrm
version=1.3
release=1
source=("https://github.com/airblader/${name#xorg-}/releases/download/v$version/${name#xorg-}-$version.tar.gz")

build() {
    cd "${name#xorg-}-$version"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}


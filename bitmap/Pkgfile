# Description : X bitmap (XBM) editor and converter utilities
# URL         : http://www.x.org
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : xorg-libxaw xorg-xbitmaps

name=bitmap
version=1.0.8
release=1
source=("https://www.x.org/archive/individual/app/$name-$version.tar.gz")

build()
{
    cd "$name-$version"

    ./configure --prefix=/usr

    make
    make DESTDIR="$PKG" install
}


# Description : Chez Scheme
# URL         : https://github.com/cisco/chezscheme
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=chezscheme
version=9.5
release=1
source=(
"https://github.com/cisco/$name/releases/download/v$version/csv$version.tar.gz"
symlink.patch
locale.patch
)

build() {
    cd "csv$version"

    patch -p1 -i "$SRC/symlink.patch"
    patch -p1 -i "$SRC/locale.patch"

    ./configure           \
        --temproot="$PKG" \
        --installprefix=/usr

    make
    make DESTDIR="$PKG" install
}

# vim: ft=sh

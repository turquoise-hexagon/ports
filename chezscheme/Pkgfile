# Description : Chez Scheme
# URL         : https://github.com/cisco/chezscheme
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=chezscheme
commit=4967118dc03e3dd4a8fb8ea29672e5cafdc6a0b1
version=12022019
release=1
source=("https://github.com/cisco/$name/archive/$commit.tar.gz")

build() {
    cd "ChezScheme-$commit"

    ./configure \
        --temproot="$PKG" \
        --installprefix=/usr

    make
    make DESTDIR="$PKG" install
}


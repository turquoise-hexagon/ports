# Description : Jshon is a JSON parser designed for maximum convenience within the shell
# URL         : http://kmkeen.com/jshon
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : jansson

name=jshon
version=20131105
release=1
source=("https://github.com/keenerd/$name/archive/$version.tar.gz")

build()
{
    cd "$name-$version"

    make
    make DESTDIR="$PKG" PREFIX=/usr install
}


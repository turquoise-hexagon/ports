# Description : Telegram Desktop messsaging app
# URL         : https://telegram.org
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=telegram
version=1.7.10
release=1
source=("https://github.com/${name}desktop/tdesktop/releases/download/v$version/tsetup.$version.tar.xz")

build() {
    cd "${name^}"

    for i in Telegram Updater; do
        install -Dm755 "$i" "$PKG/usr/bin/${i,}"
    done
}

# Description : Telegram Desktop messsaging app
# URL         : https://telegram.org
# Maintainer  : camille, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=telegram-desktop
version=1.8.9
release=1
source=("https://github.com/${name/-}/tdesktop/releases/download/v$version/tsetup.$version.tar.xz")

build() {
    cd Telegram

    for i in Telegram Updater; do
        install -Dm755 "$i" "$PKG/usr/bin/${i,}"
    done
}

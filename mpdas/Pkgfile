# Description : A C++ client to submit tracks to audioscrobble
# URL         : https://50hz.ws/mpdas
# Maintainer  : camille, camille@laserbat.pw
# Depends on  : libmpdclient curl

name=mpdas
version=0.4.5
release=1
source=(
"https://github.com/hrkfdn/$name/archive/$version.tar.gz"
"$name.conf"
"$name"
)

build() {
    cd "$name-$version"

    sed -i 's/mpdasrc/mpdas.conf/g' *

    make                              \
        DESTDIR="$PKG"                \
        PREFIX=/usr                   \
        CONFIG=/etc                   \
        MANPREFIX=/usr/share/man/man1 \
        install

    install -Dm644 "$SRC/$name.conf" -t "$PKG/etc"
    install -Dm755 "$SRC/$name"      -t "$PKG/etc/rc.d"
}

# vim: ft=sh

# Description : A Just-In-Time compiler for Lua
# URL         : https://luajit.org
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  :

name=luajit
version=2.0.5
release=1
source=("http://$name.org/download/LuaJIT-$version.tar.gz")

build ()
{
    cd "LuaJIT-$version"

    make PREFIX=/usr CFLAGS=' -fPIC' amalg
    make PREFIX=/usr DESTDIR="$PKG" install

    ln -s "/usr/include/$name-2.0" "$PKG/usr/include/$name"
}

# vim: ft=sh

# Description : Open source synthesizer
# URL         : http://zynaddsubfx.sf.net
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : cmake fftw mxml liblo fltk

name=zynaddsubfx
version=3.0.5
release=1
source=("https://downloads.sourceforge.net/project/$name/$name/$version/$name-$version.tar.bz2")

build() {
    cd "$name-$version"

    mkdir build
    cd    build

    cmake ..                        \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DGuiModule=fltk            \
        -DDefaultOutput=alsa        \
        -DDefaultInput=alsa

    make DESTDIR="$PKG" install
}

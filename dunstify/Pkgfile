# Description : Dunstify is an alternative to the notify-send command
# URL         : https://github.com/dunst-project/dunst
# Maintainer  : marin, https://github.com/turquoise-hexagon/ports/issues
# Depends on  : dunst

name=dunstify
version=1.3.2
release=1
source=("https://github.com/dunst-project/dunst/archive/v$version.tar.gz")

build() {
    cd "dunst-$version"

    make dunstify

    install -Dm755 "$name" -t "$PKG/usr/bin"
}

# vim: ft=sh

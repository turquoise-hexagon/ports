# Description : Hexdump facility from vim
# URL         : https://www.vim.org
# Maintainer  : camille, camille at laserbat dot pw

name=xxd
version=8.2.0114
release=2
source=(
"https://raw.githubusercontent.com/vim/vim/v$version/src/$name/$name.c"
"https://raw.githubusercontent.com/vim/vim/v$version/src/$name/Makefile"
"https://raw.githubusercontent.com/vim/vim/v$version/runtime/doc/$name.1"
)

build() {
    make
    
    install -Dm755 "$name" -t   "$PKG/usr/bin"
    install -Dm644 "$name.1" -t "$PKG/usr/share/man/man1"
}

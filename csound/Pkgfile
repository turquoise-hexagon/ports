# Description : A sound and music computing system
# URL         : https://csound.com
# Maintainer  : camille, camille at laserbat dot pw
# Depends on  : libsndfile cmake

name=csound
version=6.13.0
release=1
source=("https://github.com/$name/$name/archive/$version.tar.gz")

build() {
    cd "$name-$version"

    mkdir build
    cd    build

    cmake ..                       \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr

    make
    make DESTDIR="$PKG" install

    for i in "$PKG/usr/share/locale/"*; do
        [[ -d $i && ! $i =~ en_US$ ]] && rm -rf "$i"
    done
}
